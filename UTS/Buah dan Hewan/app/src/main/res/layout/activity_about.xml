    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!--Ini Profile Image-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_images"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ghozy"
                            app:civ_border_color="#fff"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/tv_about_satu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="roboto"
                            android:padding="16dp"
                            android:text="About Me"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--Ini Untuk About-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iconabout"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:padding="16dp"
                            android:scaleType="center"
                            app:materialIcon="information"
                            app:materialIconColor="@android:color/darker_gray"
                            app:materialIconSize="45dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp">

                            <TextView
                                android:id="@+id/tv_info_satu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:padding="16dp"
                                android:text="About Me"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_info_dua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_info_satu"
                                android:padding="16dp"
                                android:text="deaawdwaddddddddddawdawdawad"
                                android:textSize="15sp" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="15dp"
                        android:padding="16dp"
                        android:scaleType="center"
                        app:materialIcon="information_outline"
                        app:materialIconColor="@android:color/darker_gray"
                        app:materialIconSize="45dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_aboutsatu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:padding="16dp"
                            android:text="About Me"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_aboutdua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_aboutsatu"
                            android:padding="16dp"
                            android:text="deaawdwaddddddddddawdawdawad"
                            android:textSize="15sp" />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
