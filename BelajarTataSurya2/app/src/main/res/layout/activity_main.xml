<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Usahain Backgrond yang cocok aja breh-->

    <TextView
        android:id="@+id/jangkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!-- Cara ganti backgroundnya liat link ini http://goo.gl/wLyny-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:layout_above="@+id/jangkar"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jangkar"
        android:orientation="horizontal"
        android:id="@+id/buttonlayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/materi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/materi" />


            <Button
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/about" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/quiz" />

            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/exit"
                />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>

